<%- include('header.ejs')%>
    <div class="container border">
        <h4 class="title mt-2 mb-2 p-3">
            Cart List
            <a href="/" class="btn btn-success float-right">Home</a>
        </h4>
        <div class="row">
            <table class="table table-responsive">
                <tr>
                    <th>Product Name</th>
                    <th>Total Price</th>
                    <th>Quantity</th>
                </tr>
                <% for(let product of cartList){ %>
                    <tr>
                        <td>
                            <%=product.name%>
                        </td>
                        <td>
                            <%=product.price%>
                        </td>
                        <td>
                            <%=product.quantity%>
                        </td>
                    </tr>
                    <% } %>
            </table>
        </div>
    </div>
    <%- include('footer.ejs')%>